@model SPFWebsitMVC.Models.Conversation

@{
    ViewData["Title"] = "Conversations - Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Edit Conversation</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ConversationId" />
            <div class="form-group">
                <label asp-for="Question" class="control-label"></label>
                <input asp-for="Question" class="form-control" />
                <span asp-validation-for="Question" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Answer" class="control-label"></label>
                <input asp-for="Answer" class="form-control" />
                <span asp-validation-for="Answer" class="text-danger"></span>
            </div>
            <input type="hidden" asp-for="FollowUp" />
            <div class="form-group">
                <label asp-for="DatePosted" class="control-label"></label>
                <input type="date" asp-for="DatePosted" class="form-control" />
                <span asp-validation-for="DatePosted" class="text-danger"></span>
            </div>
            <input type="hidden" asp-for="ClientId" />
            <input type="hidden" asp-for="TrainerId" />
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to Conversation Home</a>
</div>

