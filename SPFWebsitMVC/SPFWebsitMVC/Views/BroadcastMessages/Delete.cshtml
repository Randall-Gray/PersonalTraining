@model SPFWebsitMVC.Models.BroadcastMessage

@{
    ViewData["Title"] = "Broadcast Messages - Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Delete Broadcast Message</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Message)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Message)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.DatePosted)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DatePosted)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.NumDays)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.NumDays)
        </dd>
        <dt class = "col-sm-2">
