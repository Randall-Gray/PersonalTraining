        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.PosterName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Status)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Status)
