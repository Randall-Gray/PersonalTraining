@model SPFWebsitMVC.Models.BroadcastMessage

@{
    ViewData["Title"] = "Broadcast Messages - Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Create Broadcast Message</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Message" class="control-label"></label>
                <input asp-for="Message" class="form-control" />
                <span asp-validation-for="Message" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DatePosted" class="control-label"></label>
                <input type="date" asp-for="DatePosted" class="form-control" />
                <span asp-validation-for="DatePosted" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NumDays" class="control-label"></label>
                <input asp-for="NumDays" class="form-control" />
                <span asp-validation-for="NumDays" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PosterName" class="control-label"></label>
                <input asp-for="PosterName" class="form-control" />
                <span asp-validation-for="PosterName" class="text-danger"></span>
            </div>
            <input type="hidden" asp-for="Status" />
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to Broadcast Messages Home</a>
</div>

