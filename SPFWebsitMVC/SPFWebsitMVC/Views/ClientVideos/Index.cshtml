@model IEnumerable<SPFWebsitMVC.Models.Video>

@{
    ViewData["Title"] = "Videos - Home";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Exercise/Health Videos Home</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Topic)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Link)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DatePosted)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Topic)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Link)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DatePosted)
            </td>
            <td>
                <a asp-action="MakeFavorite" asp-route-id="@item.VideoId">Add Favorite</a> |
                <a asp-action="Details" asp-route-id="@item.VideoId">Details</a> |
            </td>
        </tr>
}
    </tbody>
</table>
